<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.det.skillinvillage.DocView_MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/scheduler_RL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/applicationdetails_IB"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:src="@drawable/applicationdetails" />
            <!--                android:paddingBottom="20dp"
            -->
            <TextView
                android:id="@+id/myImageViewText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/myImageView3"
                android:layout_alignTop="@+id/myImageView3"
                android:layout_alignRight="@+id/myImageView3"
                android:layout_alignBottom="@+id/myImageView3"
                android:layout_marginLeft="10dp"
                android:gravity="bottom"
                android:paddingTop="15dp"
                android:text="Scheduler"
                android:textColor="#000000"
                android:textStyle="bold|italic"
                android:fontFamily="serif"
                android:visibility="gone"
                android:layout_marginBottom="10dp"
                tools:ignore="UnknownId" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@drawable/layout_background" />

        <RelativeLayout
            android:id="@+id/docView_RL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/feessubmit_IB"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:src="@drawable/pendingfees" />
            <!--                android:paddingBottom="20dp"
            -->
            <TextView
                android:id="@+id/myImageViewText4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/myImageView4"
                android:layout_alignTop="@+id/myImageView4"
                android:layout_alignRight="@+id/myImageView4"
                android:layout_alignBottom="@+id/myImageView4"
                android:layout_marginLeft="10dp"
                android:gravity="bottom"
                android:paddingTop="15dp"
                android:text="Scheduler"
                android:textColor="#000000"
                android:textStyle="bold|italic"
                android:fontFamily="serif"
                android:visibility="gone"
                android:layout_marginBottom="10dp"
                tools:ignore="UnknownId" />
        </RelativeLayout>
    </LinearLayout>
    <ProgressBar
        android:visibility="gone"
        android:id="@+id/progressBar"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />
</RelativeLayout>
