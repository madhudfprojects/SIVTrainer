<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/loginCard"
    app:cardCornerRadius="@dimen/loginCardRadius"
    android:elevation="15dp"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/loginViewsMargin"
    android:layout_marginBottom="@dimen/loginViewsMargin"
    android:background="@color/colorWhite"
    tools:ignore="UnusedAttribute">



    <LinearLayout
        style="@style/linearParent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/loginViewsMargin"
        android:background="#FFFFFF">

        <TextView
            style="@style/headerTextPrimary"
            android:text="Login"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:visibility="visible"
            android:fontFamily="serif"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputEmail"
            style="@style/parent"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:visibility="visible">
            <EditText
                android:id="@+id/editTextEmail"
                style="@style/parent"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:hint="Email Id"
                android:fontFamily="serif"
                android:textSize="15sp"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputPassword"
            style="@style/parent"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:visibility="visible">
            <EditText
                android:id="@+id/editTextPassword"
                style="@style/parent"
                android:hint="Password"
                android:maxLines="1"
                android:inputType="textPassword"
                android:fontFamily="serif"
                android:textSize="15sp"/>
        </android.support.design.widget.TextInputLayout>

        <!-- <TextView
             style="@style/viewParent"
             android:text="Forgot Password?"
             android:textColor="@color/colorPrimary"
             android:textSize="@dimen/newsMoreTextSize"
             android:layout_gravity="end"
             android:onClick="viewForgotPAssword"
             android:layout_marginTop="10dp"/>-->

        <Button
            android:id="@+id/normallogin_bt"
            style="@style/loginButton"
            android:text="Login"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:visibility="visible"
            android:fontFamily="serif"
            android:textSize="16sp"/>

        <com.google.android.gms.common.SignInButton
            android:id="@+id/google_signin_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:visibility="visible"
             />
        <Spinner
            android:id="@+id/userlist_sp"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/dropdownarrow"
            android:visibility="gone"
            android:popupBackground="@drawable/shadow_new"/>

        <Button
            android:id="@+id/techlogin_bt"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="TechLogin"
            android:fontFamily="serif"
            android:visibility="gone"
            android:textSize="15sp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/layout_background"/>

        <TextView
            android:id="@+id/version_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#2D67D8"
            android:text="UAT Test Version(28)-1.0"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:fontFamily="serif"
            android:textSize="12sp"/>


    </LinearLayout>
</android.support.v7.widget.CardView>