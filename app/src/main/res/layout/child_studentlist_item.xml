<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/mainviewfarmerlist_ll">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:visibility="visible"
        android:id="@+id/farmernameandcodelist_ll">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal">




            <TextView
                android:id="@+id/StudentNamelabel_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="start"
                android:text="Student Name"
                android:textColor="#5C5757"
                android:textStyle="bold"
                android:textSize="13dp"
                android:fontFamily="serif"/>

            <TextView
                android:id="@+id/StudentName_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/blackColor"
                android:textSize="13dp"
                android:fontFamily="serif"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/Applnolabel_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.21"
                android:gravity="start"
                android:text="Application No."
                android:textColor="#5C5757"
                android:textStyle="bold"
                android:textSize="13dp"
                android:fontFamily="serif"/>

            <TextView
                android:id="@+id/Applno_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/blackColor"
                android:textSize="13dp"
                android:fontFamily="serif"/>


<!--            <TextView-->
<!--                android:layout_width="0.9dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_weight="0.6"-->
<!--                android:gravity="start"-->
<!--                android:text="Pond"-->
<!--                android:textColor="#5C5757"-->
<!--                android:textStyle="bold"-->
<!--                android:textSize="13dp"-->
<!--                android:fontFamily="serif"-->
<!--                android:visibility="gone"/>-->

            <ImageView
                android:id="@+id/fees_payment_IV"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/feespay2"
                />

                    </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/farmpond_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Farmpond"
                android:textColor="#FFF"
                android:gravity="center"
                android:padding="2dp"
                android:background="@drawable/layout_background"
                android:layout_gravity="end"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:fontFamily="serif"
                android:textStyle="bold"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        android:id="@+id/nofarmerRecords_ll">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            android:text="Currently No  Records"
            android:textColor="@color/colorAccent"
            android:textSize="20dp" />

    </LinearLayout>

</LinearLayout>