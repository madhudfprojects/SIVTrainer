<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context=".Activity_LessonVerification">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="6dp"
            android:background="@drawable/shadow_new"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="Topic Name :"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="13sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/topicname_TV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#5C5757" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="Subject Name :"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="13sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/subname_TV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#5C5757" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:weightSum="1">

                <RelativeLayout
                    android:id="@+id/rel_LP_verification_questions_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/spinner_layout"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/questions_LPverification_Spinner"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:dropDownVerticalOffset="35dp"
                            android:popupBackground="@drawable/layout_background"
                            android:spinnerMode="dropdown" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="-4dp"
                        android:background="#FFFFFF"
                        android:fontFamily="serif"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text="Questions"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="20dp"
                android:background="@color/colorWhite"
                android:baselineAligned="true"
                android:orientation="horizontal"
                android:weightSum="1">

                <RelativeLayout
                    android:id="@+id/rel_Comments_LPverification_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/spinner_layout"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/Comments_ET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789 "
                            android:fontFamily="serif"
                            android:gravity="start"
                            android:textSize="13sp"
                            android:hint="Enter Comments"
                            android:inputType="textMultiLine" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="-4dp"
                        android:background="#FFFFFF"
                        android:fontFamily="serif"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text="Comments"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:padding="4dp"
            android:text="Preparing as per the Lesson Plan"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="13sp"
            android:background="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="6dp"
        android:padding="10dp"
        android:background="@drawable/spinner_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:weightSum="1">

            <RelativeLayout
                android:id="@+id/REL_LAY1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_layout"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/refer_Spinner1"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:dropDownVerticalOffset="35dp"
                        android:popupBackground="@drawable/layout_background"
                        android:spinnerMode="dropdown" />


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="-4dp"
                    android:background="#FFFFFF"
                    android:fontFamily="serif"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="Did you refer any other resources for this LP? *"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:weightSum="1"
            android:visibility="gone"
            android:id="@+id/others_1_LL">

            <RelativeLayout
                android:id="@+id/REL_LAY2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_layout"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/Others_1_ET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789 "
                        android:fontFamily="serif"
                        android:gravity="start"
                        android:hint="Enter"
                        android:textSize="13sp"
                        android:inputType="textMultiLine" />


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="-4dp"
                    android:background="#FFFFFF"
                    android:fontFamily="serif"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="Others*"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:weightSum="1"
            android:id="@+id/yes_1_LL"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/REL_LAY3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_layout"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/Yes_1_ET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789 "
                        android:fontFamily="serif"
                        android:gravity="start"
                        android:hint="Enter"
                        android:textSize="13sp"
                        android:inputType="textMultiLine" />


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="-4dp"
                    android:background="#FFFFFF"
                    android:fontFamily="serif"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="If yes, mention the resource locations*"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:weightSum="1"
            android:visibility="gone"
            android:id="@+id/No_1_LL">

            <RelativeLayout
                android:id="@+id/REL_LAY4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_layout"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/reason_Spinner2"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:dropDownVerticalOffset="35dp"
                        android:popupBackground="@drawable/layout_background"
                        android:spinnerMode="dropdown" />


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="-4dp"
                    android:background="#FFFFFF"
                    android:fontFamily="serif"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="If no, pick the reason. *"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:weightSum="1"
            android:id="@+id/Others_2_LL"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/REL_LAY5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_layout"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/Others_reason_ET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789 "
                        android:fontFamily="serif"
                        android:gravity="start"
                        android:hint="Enter"
                        android:textSize="13sp"
                        android:inputType="textMultiLine" />


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="-4dp"
                    android:background="#FFFFFF"
                    android:fontFamily="serif"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="Others*"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:weightSum="1">

            <RelativeLayout
                android:id="@+id/REL_LAY6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_layout"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/confident_Spinner3"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:dropDownVerticalOffset="35dp"
                        android:popupBackground="@drawable/layout_background"
                        android:spinnerMode="dropdown" />


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="-3dp"
                    android:background="#FFFFFF"
                    android:fontFamily="serif"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="Are you confident that you have prepared this LP well? *"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <TextView
                android:id="@+id/LPV_Question1_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="serif"
                android:gravity="start"
                android:text="How many lesson plans have you prepared for the next week?"
                android:textStyle="bold"
                android:textSize="13sp"/>


            <EditText
                android:id="@+id/LPV_Answer1_ET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/shadow_new"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789 "
                android:fontFamily="serif"
                android:gravity="start"
                android:hint="Enter"
                android:textSize="13sp"
                android:padding="10dp"
                android:inputType="textMultiLine" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <TextView
                android:id="@+id/LPV_Question2_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="serif"
                android:gravity="start"
                android:text="What are the TLMs you need for the next sessions? *"
                android:textStyle="bold"
                android:textSize="13sp"/>


            <EditText
                android:id="@+id/LPV_Answer2_ET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/shadow_new"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789 "
                android:fontFamily="serif"
                android:gravity="start"
                android:hint="Enter"
                android:textSize="13sp"
                android:padding="10dp"
                android:inputType="textMultiLine" />

        </LinearLayout>
    </LinearLayout>

        <Button
            android:id="@+id/submit_LPverification_bt"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:background="@drawable/layout_background"
            android:gravity="center"
            android:text="Submit"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFF"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>